{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  }
}